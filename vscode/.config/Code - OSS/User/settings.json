{
    "editor.autoSurround": "never",
    "editor.fontFamily": "Hack, 'Droid Sans Mono', monospace",
    "editor.minimap.enabled": false,
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "selection",
    "diffEditor.ignoreTrimWhitespace": false,
    "files.autoSave": "onFocusChange",
    "breadcrumbs.enabled": true,
    "window.autoDetectColorScheme": true,
    "window.zoomLevel": 0,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 16,
    "workbench.colorTheme": "PaperColor Redux",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#00000000",
        "editor.lineHighlightBorder": "#00000000",
        "editorCursor.background": "#eeeeee",
        "editorCursor.foreground": "#484848",
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    "vim.incsearch": true,
    "vim.surround": true,
    "vim.foldfix": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 300,
    "vim.highlightedyank.color": "rgba(250, 240, 170, 0.8)",
    "vim.handleKeys": {
        "<C-q>": false
    },
    "markdownlint.config": {
        "MD007": {"indent": 4},
        "MD012": {"maximum": 2},
        "MD013": false,
        "MD047": false,
    },
}